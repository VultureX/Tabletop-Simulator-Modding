    <Text
        id="debugLog"
        fontSize="12"
        alignment="UpperLeft"
        horizontalOverflow="Overflow">
        <textcolor color="#00FF00">Green</textcolor>
    </Text>
-->
</Panel>
</VerticalScrollView>